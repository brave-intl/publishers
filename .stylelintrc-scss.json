{
  "plugins": [
    "stylelint-scss"
  ],
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-styled-components"
  ],
  "rules": {
    "property-no-vendor-prefix": [true, {
      "ignoreProperties": ["background-clip", "padding-start", "padding-end", "animation", "transition", "transform"]
    }]
  }
}
