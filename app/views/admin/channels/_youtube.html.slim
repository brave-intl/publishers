table.display.table.table-bordered.table-striped.dynamic-table id="dynamic-table"
  tr
    th ID
    th Title
    th Publisher
    th = sort_link(:youtube_view_count, "View Count")
    th = sort_link(:video_count, "Video Count")
    th = sort_link(:subscriber_count, "Subscriber Count")
    th Channel Identifier
    th = sort_link(:created_at, "Created At")
  tbody
    - channels.each do |channel|
      tr.gradeX
        td = channel.id
        td = link_to channel.details.title, channel.details.url
        td = publisher_link(channel.publisher)
        td = channel.details.stats["view_count"]
        td = channel.details.stats["video_count"]
        td = channel.details.stats["subscriber_count"]
        td = channel.details.channel_identifier.split(':').second
        td = channel.created_at.to_fs(:long)
