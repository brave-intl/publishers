            a href='#' class="sidebar-toggle pull-right"
              = fa_icon "chevron-down"
            = link_to admin_channels_path
              span Channels
            ul.sub-menu style="#{params[:controller] == 'admin/channels' ? "" : "display:none"} "
              = link_to admin_channels_path(type: 'website')
                span Websites
              = link_to admin_channels_path(type: 'twitch')
                span Twitch
              = link_to admin_channels_path(type: 'youtube')
                span Youtube
