          li
            = link_to admin_stats_publisher_statistics_path
              span Publisher Stats
          li
            = link_to admin_stats_contributions_path
              span Top Publisher Contributions
          li
            = link_to admin_stats_referrals_path
              span Top Publisher Referrals
          li
            = link_to admin_stats_top_balances_path
              span Top Channel Balances
