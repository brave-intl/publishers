doctype html
html
  head
    meta http-equiv="Content-Type" content="text/html; charset=utf-8"
    = stylesheet_link_tag('mailer', media: 'all')
  body
    .main
      .header style="background-image: url(#{attachments["header-pattern.png"]&.url})"
        .brand
          = image_tag(attachments["brave-payments.png"]&.url, alt: t("publishers.app_title"), height: 31, width: 268)
      .content
        = yield
      .footer style="background-image: url(#{attachments["footer-top-pattern.png"]&.url})"
        .bat style="background-image: url(#{attachments["logo-bat.png"]&.url})"
          a href="https://basicattentiontoken.org/"
            = "basicattentiontoken.org"
          a href="https://basicattentiontoken.org/publisher-terms-of-service/"
            = t("publisher_mailer.shared.terms_of_service")
        .social
          a.medium href= "#{Rails.application.secrets[:bat_medium_url]}"
            = image_tag(attachments["logo-medium.png"]&.url, alt: t("publisher_mailer.shared.medium"), class: "logo", height: 20, width: 25)
          a.twitter href= "#{Rails.application.secrets[:bat_twitter_url]}"
            = image_tag(attachments["logo-twitter.png"]&.url, alt: t("publisher_mailer.shared.twitter"), class: "logo", height: 21, width: 25)
          a.reddit href= "#{Rails.application.secrets[:bat_reddit_url]}"
            = image_tag(attachments["logo-reddit.png"]&.url, alt: t("publisher_mailer.shared.reddit"), class: "logo", height: 24, width: 28)
          a.rocketchat href= "#{Rails.application.secrets[:bat_rocketchat_url]}"
            = image_tag(attachments["logo-rocketchat.png"]&.url, alt: t("publisher_mailer.shared.rocketchat"), class: "logo", height: 20, width: 25)