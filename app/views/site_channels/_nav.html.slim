  .container-fluid
    .menu-container
      .nav.pull-right
        - if @current_channel && @current_channel.id
          = link_to(t("shared.cancel"),
                  cancel_add_channel_path(@current_channel),
                  class: 'btn btn-secondary btn-highlight btn-cancel pull-right')
        - else
          = link_to(t("shared.cancel"), home_publishers_path, class: 'btn btn-secondary btn-highlight btn-cancel pull-right')

      .nav.pull-left
        / = link_to(root_path) do
        .navbar-brand.page-title= t "shared.add_channel"

      .text-center
        = yield(:navbar_content)
