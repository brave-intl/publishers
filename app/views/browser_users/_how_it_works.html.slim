.how-it-works--panel
  .how-it-works--header
    h3 How it works
  .d-flex
    .how-it-works--step-image
      = image_tag("step_1.png", width: 32, height: 32)
    .how-it-works--step-description
      p Send your unique referral link below to your friends & family to download and install the Brave browser.
  .d-flex
    .how-it-works--step-image
      = image_tag("step_2.png", width: 32, height: 32)
    .how-it-works--step-description
      p If they actively use the Brave browser for 30+ days, you will receive up to 10 BAT. See details for different rates.
  .d-flex
    .how-it-works--step-image
      = image_tag("step_3.png", width: 32, height: 32)
    .how-it-works--step-description
      p Come visit this page to check your referral progress. Your bonus will be paid out on the 8th of every month.
  hr

  center.referral-header
    h5 Your unique referral link
  .referral-link.d-flex.flex-row
    p id="#{@promo_registration.referral_code}" = https_referral_url(@promo_registration.referral_code)
    button.copy-button.share-promo-button data-clipboard-target="##{@promo_registration.referral_code}" = t("promo.shared.copy")
  br
  center
    = link_to("Terms & Conditions", "https://basicattentiontoken.org/publisher-terms-of-service/")

script src="dist/clipboard.min.js"
