{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom", "es2017"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "noEmit": true,
    "paths": {
      "brave-ui": ["./node_modules/brave-ui/src"],
      "brave-ui/*": ["./node_modules/brave-ui/src/*"]
    }
  },
  "files": ["custom.d.ts"],
  "include": ["app/javascript/**/*"],
  "exclude": ["**/*.test.tsx", "node_modules", "vendor", "public"],
  "compileOnSave": false
}
