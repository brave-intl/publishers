# .env configuration file for docker-compose context

# Admin notifications get sent here.
INTERNAL_EMAIL="admin@publishers.local"

# Upload Connection Properties
UPHOLD_AUTHORIZATION_ENDPOINT="https://sandbox.uphold.com/authorize/<UPHOLD_CLIENT_ID>?scope=<UPHOLD_SCOPE>&intention=signup&state=<STATE>"
UPHOLD_ENVIRONMENT="sandbox"
UPHOLD_API_URI="https://api-sandbox.uphold.com"
UPHOLD_DASHBOARD_URL="https://sandbox.uphold.com/dashboard"

# Eyeshade constants
FEE_RATE="0.05"

# Referral references
ACTIVE_PROMO_ID="free-bats-2018q1"
BASE_REFERRAL_LINK="brave.com"

# OAuth Connections
# See the README for more instructions

# Get these from the Google Web application setup - https://developers.google.com/youtube/registering_an_application
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# For Youtube channel stats via the data api
