<% module_namespacing do -%>
<% property = file_name.split('_').first %>
class <%= class_name %> < BaseChannelDetails
  PREFIX = "<%= property %>#channel:".freeze

  validates :<%=property%>_channel_id, presence: true
  validates :thumbnail_url, presence: true
  validates :name, presence: true
  validates :channel_url, presence: true

  def channel_identifier
    "#{PREFIX}#{<%=property %>_channel_id}"
  end

  def authorizer_name
    name
  end

  ## End methods to satisfy the Eyeshade integration

  def publication_title
    nickname
  end

  def url
    channel_url
  end
end
<% end -%>
