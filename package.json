    "cssnano": "6.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.8",
    "enzyme-to-json": "^3.6.2",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "husky": "^9.0.11",
    "jest-styled-components": "^7.2",
